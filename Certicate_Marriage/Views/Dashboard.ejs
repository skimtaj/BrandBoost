<!DOCTYPE html>
<html lang="en">
<%- include('Menu') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dashboard Page</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
            integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet"
            href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
        <!-- DataTables CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
        <!-- Responsive DataTables CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.0/css/responsive.dataTables.min.css">
        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <!-- DataTables JS -->
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <!-- Responsive DataTables JS -->
        <script src="https://cdn.datatables.net/responsive/2.4.0/js/dataTables.responsive.min.js"></script>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@300;400;500;600&display=swap');

            :root {
                --main-color: #22BAA0;
                --color-dark: #34425A;
                --text-grey: #B0B0B0;
            }

            * {
                margin: 0;
                padding: 0;
                text-decoration: none;
                list-style-type: none;
                box-sizing: border-box;
                font-family: 'Merriweather Sans', sans-serif;
            }

            main {
                margin-top: 60px;
                margin-left: 165px;
            }

            .page-header {
                padding: 1.3rem 1rem;
                background: #E9edf2;
                border-bottom: 1px solid #dee2e8;
            }

            .page-header h1,
            .page-header small {
                color: #74767d;
            }

            .page-content {
                padding: 1.3rem 1rem;
                background: #f1f4f9;
            }

            .analytics {
                display: grid;
                grid-template-columns: 1fr;
                grid-gap: 2rem;
                margin-top: .5rem;
                margin-bottom: 2rem;
            }

            @media (min-width: 768px) {
                .analytics {
                    grid-template-columns: repeat(2, 1fr);
                }
            }

            @media (min-width: 992px) {
                .analytics {
                    grid-template-columns: repeat(4, 1fr);
                }
            }

            .card {
                box-shadow: 0px 5px 5px -5px rgb(0 0 0 / 10%);
                background: #fff;
                padding: 1rem;
                border-radius: 3px;
            }

            .card-head {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .card-head h2 {
                color: #333;
                font-size: 1.8rem;
                font-weight: 500;
            }

            .card-head span {
                font-size: 3.2rem;
                color: var(--text-grey);
            }

            .card-progress small {
                color: #777;
                font-size: .8rem;
                font-weight: 600;
            }

            .card-indicator {
                margin: .7rem 0rem;
                height: 10px;
                border-radius: 4px;
                background: #e9edf2;
                overflow: hidden;
            }

            .indicator {
                height: 10px;
                border-radius: 4px;
            }

            .indicator.one {
                background: #22baa0;
            }

            .indicator.two {
                background: #11a8c3;
            }

            .indicator.three {
                background: #f6d433;
            }

            .indicator.four {
                background: #f25656;
            }

            /* DataTable Custom Styles */
            .data-table-wrapper {
                margin-top: 40px;
                overflow-x: auto;
            }

            table.dataTable {
                width: 100% !important;
                font-size: 14px;
                border-radius: 8px;
                overflow: hidden;
                border: 1px solid #ddd;
            }

            table.dataTable thead th {
                background-color: #007BFF;
                color: white;
            }

            table.dataTable tbody tr:hover {
                background-color: #f1f1f1;
            }

            table.dataTable td,
            table.dataTable th {
                padding: 10px;
                text-align: left;
            }

            table.dataTable td {
                border-bottom: 1px solid #ddd;
            }

            /* Responsive adjustments */
            @media (max-width: 992px) {
                main {
                    margin-left: 0;
                }

                /* Make DataTable smaller on mobile */
                table.dataTable {
                    font-size: 12px;
                }

                table.dataTable td,
                table.dataTable th {
                    padding: 5px;
                }

                .data-table-wrapper {
                    margin-top: 20px;
                }
            }
        </style>
    </head>

    <body>
        <main>

            <div class="page-content">



                <h2>
                    Welcome <%=Admin_Data.Name%>
                </h2>
                <div class="analytics">
                    <div class="card">
                        <div class="card-head">
                            <h2>
                                <%=countUser%>
                            </h2>
                            <span class="las la-user-friends"></span>
                        </div>
                        <div class="card-progress">
                            <small>Registered by you </small>
                            <div class="card-indicator">
                                <div class="indicator one" style="width: 60%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-head">
                            <h2>
                                <%=totalUser%>
                            </h2>
                            <span class="las la-user-friends"></span>
                        </div>
                        <div class="card-progress">
                            <small>Total registration completed </small>
                            <div class="card-indicator">
                                <div class="indicator three" style="width: 60%"></div>
                            </div>
                        </div>
                    </div>




                </div>

                <!-- DataTable Section -->
                <div class="data-table-wrapper">


                    <% if(messages.success) { %>
                        <div class="alert alert-success" role="alert" id='msg'>
                            <%=messages.success%>
                        </div>

                        <% } %>

                            <% if(messages.error) { %>
                                <div class="alert alert-danger" role="alert" id='msg'>
                                    <%=messages.error%>
                                </div>

                                <% } %>

                                    <script>


                                        setTimeout(() => {
                                            document.getElementById('msg').style.display = 'none'

                                        }, 3000)
                                    </script>






                                    <table id="example" class="display">
                                        <thead>
                                            <tr>
                                                <th>Bridegroom Name</th>
                                                <th>Bride Name</th>
                                                <th>Marriage Date</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            <% Admin_Data.Registration.forEach(function(client) { %>
                                                <tr>
                                                    <td>
                                                        <%= client.Name %>
                                                    </td>
                                                    <td>
                                                        <%= client.L_Name %>
                                                    </td>
                                                    <td>
                                                        <%= client.MD %>
                                                    </td>

                                                    <td>

                                                        <a href="/Delete/<%=client._id%> " role="button"><i
                                                                class="fa-solid fa-trash"></i></a>

                                                        <a href="/Edit_User/<%=client._id%> " role="button"><i
                                                                class="fa-solid fa-pen-to-square"></i></a>
                                                        <a href="/Pdf_User/<%=client._id%> " role="button"><i
                                                                class="fa-solid fa-file-pdf"></i></a>



                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                </div>
            </div>
        </main>

        <script>
            // Initialize DataTable with responsiveness
            $(document).ready(function () {
                $('#example').DataTable({
                    responsive: true
                });
            });
        </script>
    </body>

</html>