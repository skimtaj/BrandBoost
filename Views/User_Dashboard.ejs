<!DOCTYPE html>
<html lang="en">
<%- include('Header') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Social Dashboard - Post Cards</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            body {
                background-color: #e9ecef;
                padding: 0;
                margin: 0;
            }

            .main-content {
                padding-top: 20px;
            }

            .welcome-message {
                background-color: #2C3E50;
                color: white;
                padding: 15px;
                text-align: center;
                border-radius: 10px;
                margin-bottom: 20px;
            }

            .post-card {
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
                margin-bottom: 20px;
                transition: transform 0.3s, box-shadow 0.3s;
            }

            .post-card:hover {
                transform: scale(1.02);
                box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.2);
            }

            .post-card .card-body {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                padding: 20px;
                text-align: left;
            }

            .post-card img.post-image {
                border-radius: 10px;
                margin-bottom: 15px;
                width: 100%;
                height: 250px;
            }

            .user-profile {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
            }

            .user-profile img {
                border-radius: 50%;
                width: 50px;
                height: 50px;
                border: 2px solid #007bff;
                margin-right: 10px;
            }

            .user-profile .username {
                font-size: 1.1rem;
                font-weight: bold;
                color: #333;
            }

            .user-profile .timestamp {
                font-size: 0.85rem;
                color: #888;
            }

            .caption {
                font-size: 1rem;
                color: #333;
                margin-bottom: 10px;
            }

            .like-icon {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 100%;
                margin-top: 10px;
            }

            .like-icon img {
                width: 20px;
                height: 20px;
                margin-right: 5px;
            }

            .like-icon a {
                color: #007bff;
                margin-left: 10px;
                text-decoration: none;
            }

            .like-icon i {
                font-size: 1rem;
            }

            @media (max-width: 768px) {
                .post-card {
                    margin-bottom: 15px;
                }

                .post-card img.post-image {
                    height: 300px;
                }
            }

            @media (max-width: 576) {
                .welcome-message {
                    padding: 20px;
                }
            }
        </style>
    </head>

    <body>
        <div class="main-content container-fluid">
            <div class="welcome-message">
                <h3>Welcome to Your BrandBoost !</h3>
                <p>Stay connected and share your Business advertisment in locally.</p>
            </div>

            <% if (messages.success) { %>
                <div class="alert alert-success" id="msg">
                    <%= messages.success %>
                </div>
                <% } %>

                    <% if (messages.error) { %>
                        <div class="alert alert-danger" id="msg">
                            <%= messages.error %>
                        </div>
                        <% } %>

                            <div class="row">
                                <% userUpload.forEach(function(upload) { %>
                                    <div class="col-md-3 col-12">
                                        <div class="post-card card">
                                            <div class="card-body">
                                                <div class="user-profile">

                                                    <div>
                                                        <div class="username">
                                                            <%=upload.Name%>
                                                        </div>
                                                        <div class="timestamp">
                                                            <b> Posted on : </b>
                                                            <%=upload.DateTime%>
                                                        </div>
                                                    </div>
                                                </div>
                                                <p class="caption">
                                                    <%=upload.Caption%>
                                                </p>
                                                <img src="/Upload/<%=upload.Media%>" class="post-image"
                                                    alt="Post Image">
                                                <div class="like-icon" onclick="toggleLike(this)">
                                                    <div>
                                                        <img src="https://img.icons8.com/ios-filled/50/007bff/like.png"
                                                            alt="Like Icon">
                                                        <span class="like-count">0</span>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
        </div>

        <script>


            function toggleLike(element) {
                var likeCountElement = element.querySelector('.like-count');
                var currentCount = parseInt(likeCountElement.textContent);
                likeCountElement.textContent = currentCount + 1;
            }

            const visible = () => {
                document.getElementById('msg').style.display = 'none';
            }

            setTimeout(visible, 3000);
        </script>
    </body>

</html>