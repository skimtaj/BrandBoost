<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marriage Registration Form</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #000634, #0b1047);
      font-family: 'Montserrat', sans-serif;
      padding: 20px;
      color: #ffffff;
    }

    .register-container {
      background-color: #1a206b;
      border-radius: 15px;
      padding: 40px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      max-width: 800px;
      margin: 0 auto;
      color: #ffffff;
      backdrop-filter: blur(10px);
    }

    .register-container h2 {
      color: #fff;
      font-size: 32px;
      margin-bottom: 30px;
      text-align: center;
      font-weight: 700;
    }

    .form-group label {
      color: #c8d1e0;
      font-weight: 500;
      font-size: 14px;
    }

    .form-control {
      background-color: rgba(255, 255, 255, 0.2);
      border: none;
      border-radius: 30px;
      color: #ffffff;
      padding: 10px 15px;
      transition: all 0.3s ease;
    }

    .form-control::placeholder {
      color: #e0e0e0;
    }

    .form-control:focus {
      background-color: rgba(255, 255, 255, 0.3);
      outline: none;
      box-shadow: 0 0 5px rgba(255, 255, 255, 0.4);
      color: white;
    }

    .form-control:hover {
      background-color: rgba(255, 255, 255, 0.25);
    }

    .form-section {
      margin-bottom: 35px;
      padding: 20px;
      border-radius: 15px;
    }

    .form-section h3 {
      color: #fff;
      font-size: 22px;
      margin-bottom: 20px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .form-section.bridegroom-section {
      background-color: #0B1047;
    }

    .form-section.bride-section {
      background-color: #0B1047;
    }

    .btn-primary {
      background-color: #0095f6;
      border: none;
      border-radius: 30px;
      padding: 12px 25px;
      font-weight: 700;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #007bb5;
      box-shadow: 0 4px 15px rgba(0, 149, 246, 0.5);
    }

    @media (max-width: 576px) {
      .register-container {
        padding: 10px;
        padding-top: 30px;
      }

      .register-container h2 {
        font-size: 28px;
        font-weight: 350;
      }

      .form-group.row > div {
        margin-bottom: 15px;
      }

      .text-center {
        margin-top: 15px;
      }

      .btn-primary {
        padding: 10px 20px;
      }
    }
  </style>
</head>
<body>
  <div class="register-container">
    <h2>Marriage Registration Form</h2>

    <form method="post">
      <!-- Bridegroom Section -->
      <div class="form-section bridegroom-section">
        <h3>Bridegroom</h3>
        <div class="form-group row">
          <div class="col-md-6">
            <label for="groomName">Full Name</label>
            <input type="text" class="form-control" id="groomName" required name="Name">
          </div>
          <div class="col-md-6">
            <label for="groomFatherName">Father's Name</label>
            <input type="text" class="form-control" id="groomFatherName" required name="Father_Name">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="groomVillage">Village</label>
            <input type="text" class="form-control" id="groomVillage" required name="Village">
          </div>
          <div class="col-md-4">
            <label for="groomPost">Post</label>
            <input type="text" class="form-control" id="groomPost" required name="Post">
          </div>
          <div class="col-md-4">
            <label for="groomPS">P.S</label>
            <input type="text" class="form-control" id="groomPS" required name="PS">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="groomDistrict">District</label>
            <input type="text" class="form-control" id="groomDistrict" required name="Dist">
          </div>
          <div class="col-md-4">
            <label for="groomPin">Pin</label>
            <input type="text" class="form-control" id="groomPin" required name="Pin">
          </div>
          <div class="col-md-4">
            <label for="groomDOB">Date of Birth</label>
            <input type="text" class="form-control" id="groomDOB" required name="DOB">
          </div>
        </div>
      </div>

      <!-- Bride Section -->
      <div class="form-section bride-section">
        <h3>Bride</h3>
        <div class="form-group row">
          <div class="col-md-6">
            <label for="brideName">Full Name</label>
            <input type="text" class="form-control" id="brideName" required name="L_Name">
          </div>
          <div class="col-md-6">
            <label for="brideFatherName">Father's Name</label>
            <input type="text" class="form-control" id="brideFatherName" required name="L_Father_Name">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="brideVillage">Village</label>
            <input type="text" class="form-control" id="brideVillage" required name="L_Village">
          </div>
          <div class="col-md-4">
            <label for="bridePost">Post</label>
            <input type="text" class="form-control" id="bridePost" required name="L_Post">
          </div>
          <div class="col-md-4">
            <label for="bridePS">P.S</label>
            <input type="text" class="form-control" id="bridePS" required name="L_PS">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="brideDistrict">District</label>
            <input type="text" class="form-control" id="brideDistrict" required name="L_Dist">
          </div>
          <div class="col-md-4">
            <label for="bridePin">Pin</label>
            <input type="text" class="form-control" id="bridePin" required name="Bride_Pin">
          </div>
          <div class="col-md-4">
            <label for="brideDOB">Date of Birth</label>
            <input type="text" class="form-control" id="brideDOB" required name="L_DOB">
          </div>
        </div>
      </div>

      <!-- Marriage Details Section -->
      <div class="form-section">
        <h3>Marriage Details</h3>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="marriageDate">Marriage Date</label>
            <input type="text" class="form-control" id="marriageDate" required name="MD">
          </div>
          <div class="col-md-4">
            <label for="registrationDate">Registration Date</label>
            <input type="text" class="form-control" id="registrationDate" required name="RD">
          </div>
          <div class="col-md-4">
            <label for="placeOfMarriage">Place of Marriage</label>
            <input type="text" class="form-control" id="placeOfMarriage" required name="Place">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4">
            <label for="witnessName1">Mohor</label>
            <input type="text" class="form-control" id="witnessName1" required name="Mohor">
          </div>
          <div class="col-md-4">
            <label for="witnessName2">Vol</label>
            <input type="text" class="form-control" id="witnessName2" required name="vol">
          </div>

          <div class="col-md-4">
            <label for="witnessName2">Page No</label>
            <input type="text" class="form-control" id="witnessName2" required name="Page">
          </div>
         

        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
